# GENERAL
alias ls="ls -F"
alias xe="emacs -nw -l ~/.emacs"

# GIT
alias gs="git status"
alias gc="git commit -m"
alias grev='git rev-list --full-history --all | head -1'
alias gup='git add .; git commit -m "update"; git push;'

alias dodev='git clone https://github.com/bcferrycoder/jdw-dev.git dev'
alias doblog='git clone https://github.com/bcferrycoder/bcferrycoder.github.com.git blog'

# DOCKER
alias docker='sudo docker'
alias dr='docker_run'
alias dps='docker ps'
alias dim='docker images | grep jdw'
alias dst='docker stop'
alias drm='docker rm'
alias drmi='docker rmi'
alias dc="docker commit"
alias docker-remove-all='docker ps -a | grep Exit | awk '{print $1}' | sudo xargs docker rm'

# GPG
alias encrypt="gpg -c"
alias decrypt="gpg -d"

# UTIL
alias mem='while true; do free -m -t | tail -1'
